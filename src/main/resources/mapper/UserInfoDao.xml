<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sporthealth.dao.UserInfoDao">

    <select id="getUserInfos" resultType="UserInfo">
			SELECT 
				USERID,NAME,SEX,AGE,REGTIME
			FROM
				SH_USERINFO
    </select>
    <select id="getUserInfo" resultType="UserInfo">
			SELECT
				USERID,NAME,SEX,AGE,REGTIME
			FROM
				SH_USERINFO
			WHERE USERID = #{userId}
    </select>
    <insert id="insertUserInfo">
			INSERT INTO SH_USERINFO
				(NAME,SEX,AGE,REGTIME)
			VALUES
				(#{name},#{sex},#{age},#{regTime})
    </insert>
    <delete id="deleteUserInfo">
			DELETE FROM 
				SH_USERINFO
			WHERE 
				USERID = #{userId}
    </delete>
    <update id="updateUserInfo" parameterType="java.util.Map">
			UPDATE
				SH_USERINFO
			SET
				NAME = #{name}, SEX = #{sex}, AGE = #{age}, REGTIME = #{regTime}
			WHERE
				USERID = #{userId}
    </update>
</mapper>